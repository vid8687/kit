SubDir TOP kit ;

MySubDir TOP kit ;

local NAMES =
	kit.cpp #basic kit stuff
	kit-SDL2.cpp #kit SDL2 backend
	Button.cpp
	#resource loading:
	Load.cpp
	MeshBuffer.cpp
	BoneAnimation.cpp
	#GL wrappers:
	GLProgram.cpp
	#path utils:
	path.cpp
	#png utils:
	load_save_png.cpp
	#imgui backend:
	imgui_impl_opengl3.cpp
	imgui_impl_sdl.cpp
	#imgui core
	imgui.cpp
	imgui_draw.cpp
	imgui_tables.cpp
	imgui_widgets.cpp
	imgui_demo.cpp
	
;

if $(KIT_USE_JPEG) = 1 {
	NAMES += load_save_jpeg.cpp ;
}

if $(OS) = NT {
	NAMES += gl_shims.cpp ;
}

if $(OS) = MACOSX {
	NAMES += kit-SDL2-osx.mm ;
}

MyObjects $(NAMES) ;

KIT_OBJECTS = $(NAMES:D=$(LOCATE_TARGET):S=$(SUFOBJ)) ;
